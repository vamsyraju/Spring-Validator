<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:aop="http://www.springframework.org/schema/aop"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
    http://www.springframework.org/schema/aop 
    http://www.springframework.org/schema/aop/spring-aop-3.0.xsd ">
    
    <aop:config>
    	<aop:aspect id="log" ref="logging">
    		<aop:pointcut id="selectAll" expression="execution(* com.tutorialpoint.spring.aspect.Student.*(..))"/>
    		<aop:before pointcut-ref="selectAll" method="beforeAdv"/>
    		<aop:after pointcut-ref="selectAll" method="afterAdv"/>
    		<aop:after-returning pointcut-ref="selectAll"  returning="retVal" method="afterReturningAdv"/>
    		<aop:after-throwing pointcut-ref="selectAll" throwing="ex" method="afterThrowingAdv"/>
    	</aop:aspect>
    </aop:config>
    
    <bean id="student" class="com.tutorialpoint.spring.aspect.Student">
    	<property name="name" value="Vamsi"/>
    	<property name="age" value="28"/>
    </bean>
    <bean id="logging" class="com.tutorialpoint.spring.aspect.Logging"></bean>
 </beans>   